<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="./styles/style.css">
  <title>Wargames</title>
</head>
<body>

  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/new">New Game</a></li>
    <li><a href="/games">My Games</a></li>
    <li><a href="/register">Login/Register</a></li>
  </ul>

  <div class = "main_container">
    
    <h1>Register Page</h1>
    <hr>
    
    <form >
      <div class="error" style="background-color: red;"></div><br>
      <label for="username">Username</label><br>
      <input type="text" id="username" required/><br>
      <label for="password">Password</label><br>
      <input type="password" id="password" required><br>
      <input type="submit" value="register"><br>
    </form>
    <a href="/login">Already registered? Login</a>

  </div>

  <div class="log"></div>
  
  <script>
    const form = document.querySelector('form')
    const username = document.querySelector('#username')
    const password = document.querySelector('#password')
    const display = document.querySelector('.log')

     form.addEventListener('submit', async (e) => {
        e.preventDefault()
        display.textContent = ''
        try {
          const res = await fetch('/api/auth/register', {
            method: 'POST',
            body: JSON.stringify({ username: username.value, password: password.value }),
            headers: { 'Content-Type': 'application/json' }
          })
          const data = await res.json()
          if(res.status === 400 || res.status === 401){
           return display.textContent = `${data.message}.`
          }
          data.role === "admin" ? location.assign('/admin') : location.assign('/')
        } catch (err) {
          console.log(err.message)
        }

      })
  </script>
</body>
</html>